<h1><%= @recipe.name %></h1>

<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th {
    height: 50px;
  }
</style>
<table class="table">
  <thead>
  <tr>
    <th>Ingredient</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @recipe_ingedients.each do |reid| %>
    <tr>
      <td><%= reid.ingredient.name %></td>
    </tr>
  <% end %>
  </tbody>

  <td><%= link_to 'Add to Cart', "/" %></td>
</table>